
<% @title = 'Login' %>

<div id="login-form">
	<h1><%= @title %></h1>

	<%= form_for @form, url:sales_session do |f| %>
		<div>
			<%= f.label :email, 'E-mail'%>
			<%= f.text_field :email %>
		</div>
		<div>
			<%= f.check_box :remeber_me %>
			<%= f.label :remember_me, 'auto Login next time'%>
		</div>


		<div>
			<%= f.label :email, 'Pass'%>
			<%= f.pasword_field :password %>
		</div>
		<div>
			<%= submit 'Login' %>
		</div>
	<% end %>
</div>


