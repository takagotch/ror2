<% @title = 'message more' %>
<h1><%= @title %></h1>

<div class="table-wrapper">
  <div class="links">
	  <%= link_to 'reply', new_sales_message_reply_path(@message) %> 
  </div>
	<table class="attributes">
	  <% p = MessagePresenter.new(@message, self) %>
	  <tr><th>sender</th><td><%= p.sender %></td></tr>
	  <tr><th>about</th><td><%= p.subject %></td></tr>
	  <tr><th>create_at</th><td class="date"><%= p.create_at %></td></tr>
	</table>

	<div class="body"><%= p.formatted_body %></div>
</div>

