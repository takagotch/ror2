<%= markup do |m|
	p = FormPresenter.new(f, self)
	p.with_options(required: true) do |q|
		m << q.text_field_block(:subject, 'subject', size: 40, maxlength: 80)
		m.div(class: 'input-block') do |m|
			m << q.decorated_label(:body, 'text')
			m << q.text_area(:body, rows: 6, sytle: 'width: 454px')
			m.span'-800', class: 'instruction', style: 'float: right'
		end
	end
end%>
