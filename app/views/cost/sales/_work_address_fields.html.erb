<% f.fields_for :work_address, f.object.sales.work_address do |ff| %>
	<% markup do |m|
	p = AddressFormPresenter.new(ff, self)
	m << p.text_field_block(:company_name, 'compay_name', size: 40, required: true)
	m << p.text_field_block(:division_name, 'division_name', size: 40)
	m << p.postal_code_block(:postal_code, 'postal_code', size: 7)
	m << p.drop_down_list_block(:prefecture, 'prefecture',
			     Address::PREFECTURE_NAMES)
	m << p.text_field_block(:city, 'city', size: 16)
	m << p.text_field_block(:address1, 'address1', size: 40)
	m << p.text_field_block(:address2, 'address2', size: 40)
	end %>
<% end %>

